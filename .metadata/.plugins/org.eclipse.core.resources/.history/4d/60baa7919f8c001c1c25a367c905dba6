package com.abhisek.mindtree.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import java.util.Collections;
import io.swagger.v3.oas.annotations.OpenAPIDefinition;
import io.swagger.v3.oas.models.Components;
import io.swagger.v3.oas.models.OpenAPI;
import io.swagger.v3.oas.models.info.Contact;
import io.swagger.v3.oas.models.info.Info;
import io.swagger.v3.oas.models.info.License;
import lombok.AllArgsConstructor;

@Configuration
@OpenAPIDefinition
@AllArgsConstructor
public class OpenAPIConfig {
	@Bean
	public OpenAPI customOpenAPI() {
		return new OpenAPI().components(new Components())
				.info(new Info().title("Sphopping Cart Application API")
						.description("This is a shopping cart application using OpenApi Documentation")
						.contact(getContact()).license(getLicense()).termsOfService("Please do not copy any thing"));
	}

	private License getLicense() {
		License license = new License();
		license.setName("CopyRight Abhisek Ghosh 2022");
		license.setUrl("www.xyz.com");
		return null;
	}

	private Contact getContact() {
		Contact contact = new Contact();
		contact.setEmail("ghosh.abhisek1988@gmail.com");
		contact.setName("Abhisek Ghosh");
		contact.setUrl("www.abhisekghosh.com");
		return contact;
	}
}
